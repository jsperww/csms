<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbsoft.csms.dao.DingDingDeptInfoDao">
	<!-- 表名 -->
	<sql id="tableName">
		k_dd_dept
	</sql>
	<!-- 字段名 -->
	<sql id="fieldAll">
		ext,createDeptGroupIn,name,id,autoAddUserIn,parentid
	</sql>
	<!-- 字段名去空 -->
	<sql id="fieldTrimAll">
		RTRIM(ext) ext,createDeptGroupIn,RTRIM(name) name,id,autoAddUserIn,parentid
	</sql>
	<sql id="fieldTrimAll2">
		RTRIM(a.ext) ext,a.createDeptGroupIn,RTRIM(a.name) name,a.id,a.autoAddUserIn,a.parentid
	</sql>
	<resultMap id="resultMap" type="com.hbsoft.dingding.bean.DingDingDeptInfo">
		<id property="id_prikey" column="id_prikey"/>
		<result property="ext" column="ext" />
		<result property="createDeptGroupIn" column="createDeptGroupIn" />
		<result property="name" column="name" />
		<result property="id" column="id" />
		<result property="autoAddUserIn" column="autoAddUserIn" />
		<result property="parentid" column="parentid" />
	</resultMap>
	<!-- 插入一条数据 -->
	<insert id="insert">
		insert into
		<include refid="tableName" />
		(
		<include refid="fieldAll" />
		)
		values(#{ext},#{createDeptGroupIn},#{name},#{id},#{autoAddUserIn},#{parentid})
	</insert>
	<!-- 插入一条数据返回主键,主键在传入的对象里面 -->
	<insert id="insertPrikey">
		<selectKey resultType="Integer" order="AFTER" keyProperty="id_prikey">
          SELECT @@IDENTITY
      	</selectKey>
		insert into
		<include refid="tableName" />
		(
		<include refid="fieldAll" />
		)
		values(#{ext},#{createDeptGroupIn},#{name},#{id},#{autoAddUserIn},#{parentid})
	</insert>
	<!-- 批量添加 -->
	<insert id="insertBatch">
		insert into
		<include refid="tableName" />
		(
		<include refid="fieldAll" />
		)
		values
		<foreach collection="list" item="item" index="index" separator=",">
			(#{item.ext},#{item.createDeptGroupIn},#{item.name},#{item.id},#{item.autoAddUserIn},#{item.parentid})
		</foreach>
	</insert>
	<!-- 按给定条件删除记录 -->
	<delete id="delete">
		delete
		<include refid="tableName" />
		<where>
			<choose><when test="id_prikey!=null">and id_prikey = #{id_prikey}</when></choose>
			<choose><when test="ext!=null">and ext = #{ext}</when></choose>
			<choose><when test="createDeptGroupIn!=null">and createDeptGroupIn = #{createDeptGroupIn}</when></choose>
			<choose><when test="name!=null">and name = #{name}</when></choose>
			<choose><when test="id!=null">and id = #{id}</when></choose>
			<choose><when test="autoAddUserIn!=null">and autoAddUserIn = #{autoAddUserIn}</when></choose>
			<choose><when test="parentid!=null">and parentid = #{parentid}</when></choose>
		</where>
	</delete>
	<!-- 按主键删除单条记录 -->
	<delete id="deleteOne">
		delete
		<include refid="tableName" />
		where id_prikey = #{id}
	</delete>
	<!-- 按主键删除多条记录 -->
	<delete id="deleteBatch">
		delete
		<include refid="tableName" />
		where id_prikey in
		<choose>
			<when test="ids!=null&amp;&amp;ids.size()>0">
				<foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
					#{item}
				</foreach>
			</when>
			<otherwise>
				(0)
			</otherwise>
		</choose>
	</delete>
	<!-- 根据主键或者外键修改记录 -->
	<update id="update">
		update
		<include refid="tableName" />
		<trim prefix="set" suffixOverrides=",">
		<if test="ext!=null">ext = #{ext},</if> 
		<if test="createDeptGroupIn!=null">createDeptGroupIn = #{createDeptGroupIn},</if> 
		<if test="name!=null">name = #{name},</if> 
		<if test="id!=null">id = #{id},</if> 
		<if test="autoAddUserIn!=null">autoAddUserIn = #{autoAddUserIn},</if> 
		<if test="parentid!=null">parentid = #{parentid},</if> 
		</trim>
		<where>
			<choose><when test="id_prikey!=null">and id_prikey = #{id_prikey}</when></choose>
		</where>
	</update>
	<!-- 根据主键清空字段 -->
	<update id="updateEmpty">
		update
		<include refid="tableName" />
		<trim prefix="set" suffixOverrides=",">
		<if test="ext!=null">ext = NULL,</if>
		<if test="createDeptGroupIn!=null">createDeptGroupIn = NULL,</if>
		<if test="name!=null">name = NULL,</if>
		<if test="id!=null">id = NULL,</if>
		<if test="autoAddUserIn!=null">autoAddUserIn = NULL,</if>
		<if test="parentid!=null">parentid = NULL,</if>
		</trim>
		<where>
			id_prikey = #{id_prikey}
		</where>
	</update>
	<!-- 根据主键查询单条记录 -->
	<select id="findById" resultMap="resultMap">
		select
		<include refid="fieldTrimAll2" />,a.id_prikey
		from
		<include refid="tableName" /> a
		
		where a.id_prikey = #{id}
	</select>
	<!-- 根据传入字段查询单条记录 -->
	<select id="findByField" resultMap="resultMap">
		select
		<include refid="fieldTrimAll2" />,a.id_prikey
		from
		<include refid="tableName" /> a
		
		<where>
			<choose><when test="id_prikey!=null">and a.id_prikey = #{id_prikey}</when></choose>
			<choose><when test="ext!=null &amp;&amp; ext!=''">and a.ext = #{ext}</when></choose>
			<choose><when test="createDeptGroupIn!=null">and a.createDeptGroupIn = #{createDeptGroupIn}</when></choose>
			<choose><when test="name!=null &amp;&amp; name!=''">and a.name = #{name}</when></choose>
			<choose><when test="id!=null">and a.id = #{id}</when></choose>
			<choose><when test="autoAddUserIn!=null">and a.autoAddUserIn = #{autoAddUserIn}</when></choose>
			<choose><when test="parentid!=null">and a.parentid = #{parentid}</when></choose>
			
		</where>
	</select>
	<!-- 根据传入字段查询多条记录 -->
	<select id="findAll" resultMap="resultMap">
		select
		<include refid="fieldTrimAll2" />,a.id_prikey
		from
		<include refid="tableName" /> a
		
		<where>
			<choose><when test="id_prikey!=null">and a.id_prikey = #{id_prikey}</when></choose>
			<choose><when test="ext!=null &amp;&amp; ext!=''">and a.ext = #{ext}</when></choose>
			<choose><when test="createDeptGroupIn!=null">and a.createDeptGroupIn = #{createDeptGroupIn}</when></choose>
			<choose><when test="name!=null &amp;&amp; name!=''">and a.name = #{name}</when></choose>
			<choose><when test="id!=null">and a.id = #{id}</when></choose>
			<choose><when test="autoAddUserIn!=null">and a.autoAddUserIn = #{autoAddUserIn}</when></choose>
			<choose><when test="parentid!=null">and a.parentid = #{parentid}</when></choose>
			
		</where>
	</select>
	<sql id="pagingWhere">
		<where>
			<choose><when test="id_prikey!=null">and a.id_prikey = #{id_prikey}</when></choose>
			<choose><when test="ext!=null &amp;&amp; ext!=''">and a.ext like '%${ext}%'</when></choose>
			<choose><when test="createDeptGroupIn!=null">and a.createDeptGroupIn = #{createDeptGroupIn}</when></choose>
			<choose><when test="name!=null &amp;&amp; name!=''">and a.name like '%${name}%'</when></choose>
			<choose><when test="id!=null">and a.id = #{id}</when></choose>
			<choose><when test="autoAddUserIn!=null">and a.autoAddUserIn = #{autoAddUserIn}</when></choose>
			<choose><when test="parentid!=null">and a.parentid = #{parentid}</when></choose>
			
		</where>
	</sql>
	<!-- 分页获取总数 -->
	<select id="findPagingCount" resultType="Integer">
		select count(*) _row from
		<include refid="tableName" /> a
		
		<include refid="pagingWhere" />
	</select>
	<!-- 分页获取数据 -->
	<select id="findPagingData" resultMap="resultMap">
		select
		<include refid="fieldAll" />,id_prikey
		from (
		select row_number() over (order by a.id_prikey asc) RN,
		<include refid="fieldTrimAll2" />,a.id_prikey
		from
		<include refid="tableName" /> a
		
		<include refid="pagingWhere" />
		) a where RN &gt; #{start} and RN &lt;= #{end}
	</select>
	
</mapper>